    <script type="text/javascript" src="../../Content/CloudAdmin/js/uniform/jquery.uniform.min.js"></script>
    <!-- CUSTOM SCRIPT -->
    <script src="../../Content/MainForm/mainform.js"></script>
    <!-- /JAVASCRIPTS -->
</body>
</html>